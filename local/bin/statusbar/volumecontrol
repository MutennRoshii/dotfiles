#!/bin/bash

# You can call this script like this:
# volumecontrol up
# volumecontrol down
# volumecontrol mute

function get_volume {
    pamixer --get-volume
}

function is_mute {
    mute=$(pamixer --get-mute)
if [ $mute == "true" ]
then
	return 0
else
	return 1
fi
}

function send_notification {
    volume=`get_volume`
    # Make the bar with the special character ─ (not dash '-')
if [ "$volume" = "0" ]; then
        icon_name="/usr/share/icons/Adwaita/16x16/legacy/audio-volume-muted.png"
dunstify -i "$icon_name" -r 5556 -u normal "$volume"
    else
	if [  "$volume" -lt "10" ]; then
	     icon_name="/usr/share/icons/Adwaita/16x16/legacy/audio-volume-low.png"
dunstify -i "$icon_name" -r 5556 -u normal "$volume"
    else
        if [ "$volume" -lt "30" ]; then
            icon_name="/usr/share/icons/Adwaita/16x16/legacy/audio-volume-low.png"
        else
            if [ "$volume" -lt "70" ]; then
                icon_name="/usr/share/icons/Adwaita/16x16/legacy/audio-volume-medium.png"
            else
                icon_name="/usr/share/icons/Adwaita/16x16/legacy/audio-volume-high.png"
            fi
        fi
    fi
fi
bar=$(seq -s "─" $(($volume/5)) | sed 's/[0-9]//g')
# Send the notification
dunstify -i "$icon_name" -r 5556 -u normal "$bar  $volume"
}

case $1 in
    up)
	# Set the volume on (if it was muted)
	pamixer -u > /dev/null
	# Up the volume (+ 2%)
	pamixer -i 2 > /dev/null
	send_notification
	canberra-gtk-play -i audio-volume-change
	;;
    down)
	pamixer -u > /dev/null
	pamixer -d 2 > /dev/null
	send_notification
	canberra-gtk-play -i audio-volume-change
	;;
    mute)
    	# Toggle mute
	pamixer -t > /dev/null
	if is_mute ; then
	dunstify -i "/usr/share/icons/Adwaita/16x16/legacy/audio-volume-muted.png" -r 5556 -u normal "$bar Audio Muted"
	else
	    send_notification
	    canberra-gtk-play -i audio-volume-change
	fi
	;;
    *)
	volume="$(get_volume)"

	if [[ $volume == "100" ]]; then
		icon=""
	elif [[ $volume -ge "89" && $volume -le "100" ]]; then
		icon=""
	elif [[ $volume -ge "79" && $volume -le "90" ]]; then
		icon=""
	elif [[ $volume -ge "69" && $volume -le "80" ]]; then
		icon="墳"
	elif [[ $volume -ge "59" && $volume -le "70" ]]; then
		icon="墳"
	elif [[ $volume -ge "49" && $volume -le "60" ]]; then
		icon="墳"
	elif [[ $volume -ge "39" && $volume -le "50" ]]; then
		icon="墳"
	elif [[ $volume -ge "29" && $volume -le "40" ]]; then
		icon=""
	elif [[ $volume -ge "19" && $volume -le "30" ]]; then
		icon=""
	elif [[ $volume -ge "9" && $volume -le "20" ]]; then
		icon=""
	elif $volume -gt "0" && $volume -le "10" ]]; then
		icon=""
	elif [[ $volume -eq "0" ]]; then
		icon="婢"
		volume=" M "
	fi


if is_mute; then
		icon="婢"
		volume=" M "
fi

printf "%s" "$icon $volume%"
  ;;
esac
